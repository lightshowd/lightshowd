{
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["es2021", "DOM"],
    "module": "commonjs",
    "target": "es2021",
    "declaration": true,
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "composite": true
  },
  "include": ["src"]
}
