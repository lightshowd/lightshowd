{
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "paths": {
      "@lightshowd/core/*": ["../core"]
    }
  },
  "include": ["src/index.ts"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
