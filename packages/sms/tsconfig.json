{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "paths": {
      "@lightshow/core/*": ["../core/*"]
    }
  }
}
